      "args": ["mcp-server-time", "--local-timezone", "Asia/Shanghai"]
    },
    "git": {
      "args": ["mcp-server-git"],
      "command": "uvx"
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/pangxuyuan"
      ]
    }
  }
}
